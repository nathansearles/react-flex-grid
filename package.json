{
  "name": "@nathansearles/react-flex-grid",
  "version": "1.0.6",
  "description": "A simple React based grid system using flex",
  "author": "Nathan Searles",
  "main": "dist/index.js",
  "license": "MIT",
  "keywords": [
    "react",
    "component",
    "grid",
    "grid system",
    "flex grid"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "eslintIgnore": [
    "dist/**"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --name ReactGrid --format cjs,esm,umd"
  },
  "devDependencies": {
    "@types/react": "^17.0.9",
    "@types/react-dom": "^17.0.6",
    "autoprefixer": "^10.2.6",
    "cssnano": "^5.0.5",
    "postcss": "^8.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-scss": "^2.6.1",
    "sass": "^1.34.1",
    "tsdx": "^0.14.1",
    "typescript": "^4.3.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      "defaults"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
